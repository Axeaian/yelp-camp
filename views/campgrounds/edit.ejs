<<% include ../partials/header %>
<div class="container">
    <div class="row">
    <h1 style="text-align:center">Edit <%=cg.name%></h1>
    </div>
    <div style="width:30%; margin:30px auto">
        <form action="/campgrounds/<%=cg._id%>?_method=PUT" method="POST">
            <div class="form-group">
            <input class="form-control" type="text" name ="cp[name]" value="<%=cg.name%>">
            </div>
            <div class="form-group">
            <input class="form-control" type="number" name ="cp[price]" min="0.01" step="0.01">
            </div>
            <div class="form-group">
            <input class="form-control" type="url" name ="cp[image]" value="<%=cg.image%>">
            </div>
            <div class="form-group">
            <input class="form-control" type="text" name ="cp[desc]" value="<%=cg.description%>">
            </div>
            <div class="form-group">
            <button class="btn btn-primary btn-lg btn-default">Update!</button>
            </div>
        </form>
    <a href ="/campgrounds">Go Back</a>  
    </div>
      
</div>

<% include ../partials/footer %>