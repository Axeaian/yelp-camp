<% include ../partials/header %>
<div class="container">
    <div class="row">
    <h1 style="text-align:center">Create a new campground</h1>
    </div>
    <div style="width:30%; margin:30px auto">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
            <input class="form-control" type="text" name ="cpname" placeholder="name">
            </div>
            <div class="form-group">
            <input class="form-control" type="number" name ="cpprice" placeholder="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
            <input class="form-control" type="url" name ="cpimage" placeholder="image url">
            </div>
            <div class="form-group">
            <input class="form-control" type="text" name ="cpdesc" placeholder="description">
            </div>
            <div class="form-group">
            <button class="btn btn-primary btn-lg btn-default">Add Campground!</button>
            </div>
        </form>
    <a href ="/campgrounds">Go Back</a>  
    </div>
      
</div>

<% include ../partials/footer %>